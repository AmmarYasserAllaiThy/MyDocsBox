<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/item_book_padding_s_e"
    android:paddingEnd="@dimen/item_book_padding_s_e"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_manage_title"
        style="@style/Settings_Item_Key"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="@dimen/item_book_padding_s_e"
        android:paddingTop="@dimen/item_book_padding_t_b"
        android:paddingEnd="@dimen/item_book_padding_s_e"
        android:paddingBottom="@dimen/item_book_padding_t_b"
        android:text="@string/doc_book" />

    <ImageButton
        android:id="@+id/item_manage_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/item_book_padding_s_e"
        android:paddingEnd="@dimen/item_book_padding_s_e"
        android:paddingTop="@dimen/item_book_padding_t_b"
        android:paddingBottom="@dimen/item_book_padding_t_b"
        android:src="@drawable/ic_bs_edit"
        android:background="@drawable/anim_bg_set_row"
        android:contentDescription="@string/bs_edit" />

    <ImageButton
        android:id="@+id/item_manage_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/item_book_padding_s_e"
        android:paddingEnd="@dimen/item_book_padding_s_e"
        android:paddingTop="@dimen/item_book_padding_t_b"
        android:paddingBottom="@dimen/item_book_padding_t_b"
        android:src="@drawable/ic_bs_delete"
        android:background="@drawable/anim_bg_set_row"
        android:contentDescription="@string/bs_delete" />

</LinearLayout>