<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_activity"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryLight"
            android:onClick="gotoProfile"
            android:orientation="horizontal"
            android:padding="@dimen/settings_item_padding_se">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/doc_image_margin"
                android:contentDescription="@string/no_image"
                android:src="@drawable/ic_set_account_circle_100dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Ammar Yasser"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimary" />

        <!-- General -->
        <LinearLayout style="@style/Settings_Group">

            <TextView
                style="@style/Settings_Group.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_manage" />

            <LinearLayout
                style="@style/Settings_Row.Done"
                android:onClick="manageBooks">

                <ImageView
                    style="@style/Settings_Item_Icon"
                    android:src="@drawable/ic_set_book_48dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Settings_Item_Key"
                        android:text="@string/set_mng_books_key" />

                    <TextView
                        android:id="@+id/settings_books_no_tv"
                        style="@style/Settings_Item_Value"
                        android:text="@string/set_books_no" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/Settings_Row.Done"
                android:onClick="manageTags">

                <ImageView
                    style="@style/Settings_Item_Icon"
                    android:src="@drawable/ic_set_flag_48dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Settings_Item_Key"
                        android:text="@string/set_mng_tags_key" />

                    <TextView
                        android:id="@+id/settings_tags_no_tv"
                        style="@style/Settings_Item_Value"
                        android:text="@string/set_tags_no" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary" />

        <!-- General -->
        <LinearLayout style="@style/Settings_Group">

            <TextView
                style="@style/Settings_Group.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_general" />

            <LinearLayout
                style="@style/Settings_Row.Done"
                android:onClick="setLang">

                <ImageView
                    style="@style/Settings_Item_Icon"
                    android:src="@drawable/ic_set_language_48dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Settings_Item_Key"
                        android:text="@string/set_gen_lang_key" />

                    <TextView
                        android:id="@+id/set_gen_lang"
                        style="@style/Settings_Item_Value"
                        android:text="@string/set_gen_lang_value" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/Settings_Row"
                android:onClick="setDateFormat">

                <ImageView
                    style="@style/Settings_Item_Icon"
                    android:src="@drawable/ic_set_today_48dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Settings_Item_Key"
                        android:text="@string/set_gen_date_key" />

                    <TextView
                        style="@style/Settings_Item_Value"
                        android:text="@string/set_gen_date_value" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
