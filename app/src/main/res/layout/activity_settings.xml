            android:layout_margin="5dp"
            android:background="@color/colorPrimary" />

        <!-- Appearance -->
        <LinearLayout style="@style/Settings_Group">

            <TextView
                style="@style/Settings_Group.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_appearance" />

            <LinearLayout
                style="@style/Settings_Row.Done"
